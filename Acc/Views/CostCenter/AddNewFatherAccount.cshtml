@model  Acc.Models.CostCenter
@{
    ViewBag.Title = @Resources.Resource.CreateFatherCostCenter;
}
<style>
    .modal-body {
        font-family: Verdana, Geneva, Tahoma, sans-serif
    }

    .modal-footer {
        font-family: Verdana, Geneva, Tahoma, sans-serif
    }

    .modal-title {
        font-family: Verdana, Geneva, Tahoma, sans-serif
    }
</style>
<script>
    $(document).ready(function () {
        $("#CostNumber").focus().select();
        $("#CostNumber").keyup(function (event) {
            if (event.keyCode == 13)
                $("#ArabicName").focus().select();

        });
        $("#ArabicName").keyup(function (event) {
            if (event.keyCode == 13)
                $("#EnglishName").focus().select();

        });
        $("#EnglishName").keyup(function (event) {
            if (event.keyCode == 13)
                $("#Note").focus().select();
        });
        $("#Note").keyup(function (event) {
            if (event.keyCode == 13)
                $("#CostNumber").focus().select();
        });
        document.getElementById("CostNumber").maxLength = @Model.LevelZero.Length;
    });
</script>
<div id="myModal" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: block;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #34495E">
                <div class="pull-left">
                    <h6 class="modal-title txt-light" style="font-weight:bold"> @Resources.Resource.CreateFatherCostCenter</h6>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="modal-body">
                <div class="panel-body">
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.CostNumber)<span style="color:red">*</span>
                            @Html.TextBoxFor(m => m.CostNumber, new { @id = "CostNumber", @class = "form-control input-sml"})
                            @Html.ValidationMessageFor(m => m.CostNumber)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ArabicName)<span style="color:red">*</span>
                            @Html.TextBoxFor(m => m.ArabicName, new { @id = "ArabicName", @class = "form-control input-sml" })
                            @Html.ValidationMessageFor(m => m.ArabicName)
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.EnglishName)
                            @Html.TextBoxFor(m => m.EnglishName, new { @id = "EnglishName", @class = "form-control input-sml" })
                            @Html.ValidationMessageFor(m => m.EnglishName)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Note)
                            @Html.TextBoxFor(m => m.Note, new { @id = "Note", @class = "form-control input-sml" })
                            @Html.ValidationMessageFor(m => m.Note)
                        </div>
                    </div>
                    @Html.HiddenFor(m => m.LevelZero, new { @id = "LevelZero" })
                    @Html.HiddenFor(m => m.CostLevel, new { @id = "CostLevel" })
                </div>

            </div>
            <div class="modal-footer">
                <div class="col-lg-12">
                    <button type="submit" class="btn btn-primary btn-anim" id="SaveFatherAccount"> <i class="fa fa-save"></i><span class="btn-text">@Resources.Resource.Save</span></button>
                    <button type="button" class="btn btn-default btn-anim" data-dismiss="modal"><i class="fa fa-times"></i><span class="btn-text">@Resources.Resource.Close</span></button>
                </div>
            </div>
        </div>
    </div>
</div>
