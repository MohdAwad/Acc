@model Acc.ViewModels.ServiceBillFilterVM
@{
    ViewBag.Title = @Resources.Resource.UnExport;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .panel-body {
        font-family: Verdana, Geneva, Tahoma, sans-serif
    }

    .panel-footer {
