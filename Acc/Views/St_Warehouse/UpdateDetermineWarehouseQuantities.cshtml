@model Acc.ViewModels.St_ItemCardVM
@{
    ViewBag.Title = @Resources.Resource.Update;
}
<style>
    .modal-body {
        font-family: Verdana, Geneva, Tahoma, sans-serif
    }

    .modal-footer {
        font-family: Verdana, Geneva, Tahoma, sans-serif
    }

    .modal-title {
        font-family: Verdana, Geneva, Tahoma, sans-serif
    }
</style>

<script>
    $("#StockMinimumItemNo").focus().select();
    $("#StockMinimumItemNo").keyup(function (event) {
        if (event.keyCode == 13)
            $("#StockMaximumItemNo").focus().select();

    });
    $("#StockMaximumItemNo").keyup(function (event) {
        if (event.keyCode == 13)
            $("#StockMinimumItemNo").focus().select();

    });
</script>
<div id="myModal" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: block;">
    <div class="modal-dialog modal-sm ">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #34495E">
                <div class="pull-left">
                    <h6 class="modal-title txt-light" style="font-weight:bold">@Resources.Resource.Update</h6>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="modal-body">
                @Html.ValidationSummary(true, "Please Fix The Foloing Error!")

                <div class="col-lg-12">
                    <div class="form-group">
                        @Html.LabelFor(m => m.StockName)

                        @Html.TextBoxFor(m => m.StockName, new { @id = "StockName", @class = "form-control input-sml", @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ItemName)

                        @Html.TextBoxFor(m => m.ItemName, new { @id = "ItemName", @class = "form-control input-sml", @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.StockMinimumItemNo)

                        @Html.TextBoxFor(m => m.StockMinimumItemNo, new { @id = "StockMinimumItemNo", @class = "form-control input-sml", @type = "Number", @min = "0" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.StockMaximumItemNo)

                        @Html.TextBoxFor(m => m.StockMaximumItemNo, new { @id = "StockMaximumItemNo", @class = "form-control input-sml", @type = "Number", @min = "0" })
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-lg-12">
                    <button type="submit" class="btn btn-success btn-anim" id="btnUpdate"> <i class="fa fa-edit"></i><span class="btn-text">@Resources.Resource.Update</span></button>
                    <button type="button" class="btn btn-default btn-anim" data-dismiss="modal" id="Close"><i class="fa fa-times"></i><span class="btn-text">@Resources.Resource.Close</span></button>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.TextBoxFor(m => m.StockCode, new { @id = "StockCode", @style = "visibility : hidden;" })
@Html.TextBoxFor(m => m.UpdateItemCode, new { @id = "UpdateItemCode", @style = "visibility : hidden;" })











