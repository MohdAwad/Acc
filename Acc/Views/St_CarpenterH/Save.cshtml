@model Acc.Models.St_CarpenterH
@{
    ViewBag.Title = @Resources.Resource.Save;
}
<style>
    .modal-body {
        font-family: Verdana, Geneva, Tahoma, sans-serif
    }

    .modal-footer {
        font-family: Verdana, Geneva, Tahoma, sans-serif
    }

    .modal-title {
        font-family: Verdana, Geneva, Tahoma, sans-serif
    }
</style>
<script>
    function GetSelectedEmployee(data) {
        if (data.EmployeeId != null && data.EmployeeId != '') {
            document.getElementById("HrID").value = data.EmployeeId;
        }
        else {
            document.getElementById("HrID").value = '';
        }
    }
    $(document).ready(function () {
        $("#ArabicName").focus().select();
        $("#ArabicName").keyup(function (event) {
            if (event.keyCode == 13)
                $("#EnglishName").focus().select();
        });
        $("#EnglishName").keyup(function (event) {
            if (event.keyCode == 13)
                $("#ArabicName").focus().select();
        });
        $('#BtnClearJobNumber').on('click', function () {
            document.getElementById("HrID").value = '';
        });
    });
</script>
<div id="myModal" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: block;">
    <div class="modal-dialog modal-sm ">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #34495E">
                <div class="pull-left">
                    <h6 class="modal-title txt-light" style="font-weight:bold">@Resources.Resource.Save</h6>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="modal-body">
                @Html.ValidationSummary(true, "Please Fix The Folowing Error!")
                <div class="col-lg-12">
                    
                        <div class="form-group">
                            @Html.LabelFor(m => m.CarpenterID)

                            @Html.TextBoxFor(m => m.CarpenterID, new { @id = "CarpenterID", @class = "form-control input-sml input-sm", @readonly = "readonly" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ArabicName) <span style="color:red">*</span>

                            @Html.TextBoxFor(m => m.ArabicName, new { @id = "ArabicName", @class = "form-control  input-sm" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.EnglishName)

                            @Html.TextBoxFor(m => m.EnglishName, new { @id = "EnglishName", @class = "form-control  input-sm" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.HrID) <span style="color:red">*</span>
                            <div class="form-group  input-group">
                                @Html.TextBoxFor(m => m.HrID, new { @id = "HrID", @class = "form-control input-sml", @readonly = "readonly" })
                                <span class="input-group-btn">
                                    <button class="btn btn-default btn-icon-anim btn-square" type="button" id="BtnJobNumber">
                                        <i class="fa fa-search"></i>
                                    </button>
                                    <button class="btn btn-danger btn-icon-anim btn-square" type="button" id="BtnClearJobNumber">
                                        <i class="fa fa-minus-square"></i>
                                    </button>
                                </span>
                                @Html.ValidationMessageFor(m => m.HrID)
                            </div>
                        </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-lg-12">
                    <button type="submit" class="btn btn-primary btn-anim" id="SaveSt_CarpenterH"> <i class="fa fa-save"></i><span class="btn-text">@Resources.Resource.Save</span></button>
                    <button type="button" class="btn btn-default btn-anim" data-dismiss="modal"><i class="fa fa-times"></i><span class="btn-text">@Resources.Resource.Close</span></button>
                </div>
            </div>
        </div>
    </div>
</div>






