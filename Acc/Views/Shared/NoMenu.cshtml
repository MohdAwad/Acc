<!DOCTYPE html>
<html lang="@Acc.Helpers.CultureHelper.GetCurrentNeutralCulture() " dir="@(Acc.Helpers.CultureHelper.IsRighToLeft() ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Catnip Soft</title>

    @Styles.Render("~/Content/AllMyCss" + (Acc.Helpers.CultureHelper.IsRighToLeft() ? "-rtl" : ""))
    @Scripts.Render("~/bundles/modernizr")


    @Html.DevExpress().GetStyleSheets(

         new StyleSheet { ExtensionSuite = ExtensionSuite.GridView, Theme = "iOS" },

           new StyleSheet { ExtensionSuite = ExtensionSuite.PivotGrid, Theme = "iOS" },
         new StyleSheet { ExtensionSuite = ExtensionSuite.NavigationAndLayout, Theme = "iOS" },
    new StyleSheet { ExtensionSuite = ExtensionSuite.Editors, Theme = "iOS" },
    new StyleSheet { ExtensionSuite = ExtensionSuite.HtmlEditor, Theme = "iOS" },

    new StyleSheet { ExtensionSuite = ExtensionSuite.Chart, Theme = "iOS" },
    new StyleSheet { ExtensionSuite = ExtensionSuite.Report, Theme = "iOS" },
    new StyleSheet { ExtensionSuite = ExtensionSuite.Scheduler, Theme = "iOS" },
    new StyleSheet { ExtensionSuite = ExtensionSuite.TreeList, Theme = "iOS" },
            new StyleSheet { ExtensionSuite = ExtensionSuite.TreeList },
            new StyleSheet { ExtensionSuite = ExtensionSuite.Icons }


    )
    @Html.DevExpress().GetScripts(

        new Script { ExtensionSuite = ExtensionSuite.GridView },
        new Script { ExtensionSuite = ExtensionSuite.TreeList },
        new Script { ExtensionSuite = ExtensionSuite.NavigationAndLayout },
        new Script { ExtensionSuite = ExtensionSuite.Editors },
        new Script { ExtensionSuite = ExtensionSuite.PivotGrid }
    )


</head>
<body>

    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0;" id="MainHead">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div style="margin:5px;">
                    <span style="color:green;font-weight:bolder;">C</span>atnip<span style="color:green;font-weight:bolder;">S</span>oft
                </div>



            </div>
            <!-- /.navbar-header -->

            @Html.Partial("Header")
            <!-- /.navbar-top-links -->


            @*@Html.Partial("LeftMenu")*@


            <!-- /.navbar-static-side -->
        </nav>
        <div id="page-wrapper" style="margin:0;" >
             
            <!-- /.row -->
            <!-- /.row -->
            <div class="row">
                <div   class="col-lg-12"  > 
                    <!-- Syncfusion Essential JS 2 ScriptManager -->

                    @RenderBody()
                    <!-- /.panel -->
                </div>

            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>

    @Scripts.Render("~/bundles/lib")
    @Scripts.Render("~/bundles/app")

    @RenderSection("scripts", required: false)



</body>
</html>
