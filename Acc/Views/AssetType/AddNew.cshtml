@model Acc.Models.AssetType
@{
    ViewBag.Title = @Resources.Resource.Save;
}
<style>
    .modal-body {
        font-family: Verdana, Geneva, Tahoma, sans-serif
    }

    .modal-footer {
        font-family: Verdana, Geneva, Tahoma, sans-serif
    }

    .modal-title {
        font-family: Verdana, Geneva, Tahoma, sans-serif
    }
</style>
<script>

    $(document).ready(function () {

        $("#Name").focus().select();
        $("#Name").keyup(function (event) {
            if (event.keyCode == 13)
                $("#ConsRatio").focus().select();

        });
        $("#ConsRatio").keyup(function (event) {
            if (event.keyCode == 13)
                $("#Name").focus().select();

        });
    });
</script>
<div id="myModal" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: block;">
    <div class="modal-dialog modal-sm ">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #34495E">
                <div class="pull-left">
                    <h6 class="modal-title txt-light" style="font-weight:bold">@Resources.Resource.Save</h6>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="modal-body">
                @Html.ValidationSummary(true, "Please Fix The Foloing Error!")

                <div class="col-lg-12">

                    <div class="form-group">
                        @Html.LabelFor(m => m.AssetTypeID)

                        @Html.TextBoxFor(m => m.AssetTypeID, new { @id = "AssetTypeID", @class = "form-control input-sml", @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name)<span style="color:red">*</span>
                        @Html.TextBoxFor(m => m.Name, new { @id = "Name", @class = "form-control input-sml" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConsRatio)
                        @Html.TextBoxFor(m => m.ConsRatio, new { @id = "ConsRatio", @class = "form-control input-sml", @type = "number" })
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-lg-12">
                    <button type="submit" class="btn btn-primary btn-anim" id="SaveNewAssetType"> <i class="fa fa-save"></i><span class="btn-text">@Resources.Resource.Save</span></button>
                    <button type="button" class="btn btn-default btn-anim" data-dismiss="modal"><i class="fa fa-times"></i><span class="btn-text">@Resources.Resource.Close</span></button>
                </div>
            </div>
        </div>
    </div>
</div>


